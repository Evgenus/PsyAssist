# PsyAssist AI Configuration

# Application Settings
DEBUG=false
SECRET_KEY=your-super-secret-key-here-make-it-long-and-random

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=sqlite:///./psyassist.db
REDIS_URL=redis://localhost:6379

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_MESSAGES_PER_SESSION=50
SESSION_CLEANUP_INTERVAL_MINUTES=60

# Risk Assessment Configuration
RISK_ASSESSMENT_INTERVAL_MESSAGES=3
ESCALATION_THRESHOLD=HIGH
EMERGENCY_THRESHOLD=CRITICAL

# Event System Configuration
EVENT_BUS_URL=nats://localhost:4222
EVENT_BATCH_SIZE=10
EVENT_BATCH_TIMEOUT_SECONDS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Privacy & Compliance
DATA_RETENTION_DAYS=7
PII_REDACTION_ENABLED=true
CONSENT_REQUIRED=true

# External Services (optional - for production)
HOTLINE_API_URL=
WARM_TRANSFER_API_URL=
DIRECTORY_API_URL=

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=30

# Development Settings
TEST_MODE=false
MOCK_EXTERNAL_SERVICES=true
